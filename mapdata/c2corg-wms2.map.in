MAP

# FIXME: replace TRANSPARENCY by OPACITY when Mapserver is upgraded to version 5.x
# FIXME: use AGG in OUTPUTFORMAT instead of GD

STATUS ON
SYMBOLSET symbols.txt
EXTENT -20037508 -136554022 20037508 136554022
UNITS dd
SHAPEPATH "data"
IMAGECOLOR 255 255 255
FONTSET fonts.txt
CONFIG "PROJ_LIB" "@SF_PROJECTS_DIR@/@PROJECT_NAME@/mapdata"
MAXSIZE 2500

WEB
  METADATA
    "wms_title"     "C2C WMS Server"  ##required
    "wms_onlineresource" "http://localhost/cgi-bin/c2corg_wms"   ##required
    "wms_srs"       "EPSG:4326 EPSG:900913"  ##recommended
  END
END

PROJECTION
  "init=epsg:4326"   ##required
END

#
# Start of layer definitions
#

LAYER
  NAME summits
  METADATA
    "wms_title"    "summits"   ##required
  END
  TYPE POINT
  STATUS ON
  CONNECTIONTYPE postgis
  CONNECTION "user=@DB_USER@ password=@DB_PASS@ host=@DB_HOST@ dbname=@DB_NAME@ port=@DB_PORT@"
  DATA "geom FROM summits USING UNIQUE id USING SRID=900913"
  FILTER ("redirects_to" IS NULL AND "summit_type" != 5)
  PROJECTION
    "init=epsg:900913"   ##mandatory
  END
  #OPACITY ALPHA
  TRANSPARENCY ALPHA
  CLASSITEM "summit_type"
  
  CLASS
    NAME "pass"
    EXPRESSION "2"
    STYLE
      SYMBOL ../web/static/images/picto/pass.png
      COLOR 0 0 0
    END
  END
  
  CLASS
    NAME "lake"
    EXPRESSION "3"
    STYLE
      SYMBOL ../web/static/images/picto/lake.png
      COLOR 0 0 0
    END
  END

  CLASS
    NAME "valley"
    EXPRESSION "4"
    STYLE
      SYMBOL ../web/static/images/picto/crag.png
      COLOR 0 0 0
    END
  END

  CLASS
    NAME " "  ## hack not to avoid having a label in legends 
    STYLE
      SYMBOL ../web/static/images/modules/summits_mini.png
      COLOR 0 0 0
    END
  END
    
END # Layer

